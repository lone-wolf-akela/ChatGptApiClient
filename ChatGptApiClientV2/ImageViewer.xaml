<Window x:Class="ChatGptApiClientV2.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatGptApiClientV2"
        mc:Ignorable="d"
        Title="ImageViewer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgbox"/>
        <Button x:Name="btn_saveimg" Grid.Row="1" Width="200" Height="40" Content="图片另存为" Click="btn_saveimg_Click"/>

    </Grid>
</Window>
