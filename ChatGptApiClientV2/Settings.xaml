<Window x:Name="window" x:Class="ChatGptApiClientV2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatGptApiClientV2"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid DataContext="{Binding ElementName=window, Mode=OneWay}">
        <DockPanel Margin="20,20,20,25">
            <Button DockPanel.Dock="Bottom" Content="关闭" HorizontalAlignment="Right" Width="100" Height="50" Click="Button_Click"/>
            <StackPanel>
                <Grid>
                    <DockPanel Margin="0,0,0,5">
                        <Label DockPanel.Dock="Left" MinWidth="100" Content="API KEY" VerticalAlignment="Center" BorderBrush="{x:Null}"/>
                        <TextBox x:Name="txtbx_apikey" TextWrapping="Wrap" Text="{Binding Path=Config.API_KEY, Mode=TwoWay}" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                    </DockPanel>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
